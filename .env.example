# CryptoCaller Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# EXCHANGE API CREDENTIALS
# =============================================================================
# WARNING: Keep these credentials secure and never commit them to version control

# Binance API (Optional - for live trading)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true

# Coinbase Pro API (Optional - for live trading)
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET_KEY=your_coinbase_secret_key_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here
COINBASE_SANDBOX=true

# Kraken API (Optional - for live trading)
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_SECRET_KEY=your_kraken_secret_key_here

# =============================================================================
# BOT CONFIGURATION
# =============================================================================

# Initial portfolio balance (USD)
INITIAL_BALANCE=10000

# Risk management settings
RISK_PER_TRADE=2.0
MAX_DAILY_LOSS=5.0
MAX_POSITION_SIZE=10.0
MAX_POSITIONS=5
MAX_CORRELATION=0.7

# Trading settings
DEFAULT_STRATEGY=trend_following
DEFAULT_TIMEFRAME=1h
STOP_LOSS_MULTIPLIER=2.0
TAKE_PROFIT_MULTIPLIER=3.0

# Trading pairs (comma-separated)
TRADING_PAIRS=BTC/USDT,ETH/USDT,ADA/USDT,DOT/USDT

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application mode (demo/live)
APP_MODE=demo

# Logging level (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# Database settings
DATABASE_URL=sqlite:///data/cryptocaller.db

# Cache settings
CACHE_DURATION=60
ENABLE_CACHING=true

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================

# Streamlit server settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true

# Theme settings
STREAMLIT_THEME_PRIMARY_COLOR=#1f77b4
STREAMLIT_THEME_BACKGROUND_COLOR=#ffffff
STREAMLIT_THEME_SECONDARY_BACKGROUND_COLOR=#f0f2f6
STREAMLIT_THEME_TEXT_COLOR=#262730

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Email notifications (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=your_notification_email@gmail.com

# Telegram notifications (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Discord webhook (Optional)
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# API rate limiting
API_RATE_LIMIT=10
API_TIMEOUT=30

# Data refresh intervals (seconds)
MARKET_DATA_REFRESH=5
PORTFOLIO_REFRESH=10
RISK_CHECK_INTERVAL=30

# Backtesting settings
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-07-24
BACKTEST_INITIAL_BALANCE=10000

# Performance optimization
ENABLE_MULTIPROCESSING=false
MAX_WORKERS=4
MEMORY_LIMIT_MB=1024

# Security settings
SESSION_TIMEOUT=3600
ENABLE_HTTPS=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

